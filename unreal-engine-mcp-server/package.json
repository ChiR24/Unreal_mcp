{
  "name": "@unrealengine/mcp-server",
  "version": "1.0.0",
  "description": "Production-ready MCP server for Unreal Engine integration with consolidated and individual tool modes",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "unreal-mcp-server": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli.js",
    "dev": "ts-node-esm src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:tool4": "vitest run src/tests/consolidated-tool-4.test.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "unreal",
    "unreal-engine",
    "ue5",
    "remote-control",
    "automation",
    "game-development"
  ],
  "author": "Unreal Engine MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.0",
    "ajv": "^8.12.0",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "ws": "^8.18.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^1.6.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
